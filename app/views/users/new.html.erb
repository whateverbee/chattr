<h1 class="text-center">Register for chattr</h1>
<div class="container">
  <div class='row'>
    <div class='col-sm-12'>
        <div class="card bg-light">
          <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}, url: signup_path) do |f| %>
          <div class="form-group">
              <div class="control-label col-sm-6">
                <%= f.label :username %>
              </div>
            <div class="col-sm-8">
              <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-6">
              <%= f.label :password %>
            </div>
            <div class="col-sm-8">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Register", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
